<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/g"
    tools:context="com.shuwoapp.home.HomeDeclare">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="@color/w"
            android:gravity="center"
            android:text="交易发布"
            android:textColor="@color/t0"
            android:textSize="24sp" />

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white"
            android:padding="16dp"
            android:stretchColumns="1">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="64dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/deal_sale_book"
                    android:textColor="@color/t0"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/ed_book_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/editbox_background_normal"
                    android:inputType="text"
                    android:textColor="@color/t0"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="64dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/deal_sale_auther"
                    android:textColor="@color/t0"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/ed_book_author"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/editbox_background_normal"
                    android:inputType="text"
                    android:textColor="@color/t0"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="64dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/deal_sale_publisher"
                    android:textColor="@color/t0"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/ed_book_publish"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/editbox_background_normal"
                    android:inputType="text"
                    android:textColor="@color/t0"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="64dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出版时间"
                    android:textColor="@color/t0"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/ed_book_time"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/editbox_background_normal"
                    android:inputType="text"
                    android:textColor="@color/t0"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="64dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="原定价"
                    android:textColor="@color/t0"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/ed_book_price"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/editbox_background_normal"
                    android:inputType="text"
                    android:textColor="@color/t0"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="64dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开本"
                    android:textColor="@color/t0"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/ed_book_size"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/editbox_background_normal"
                    android:inputType="text"
                    android:textColor="@color/t0"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="64dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ISBN编码"
                    android:textColor="@color/t0"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/ed_book_isbn"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/editbox_background_normal"
                    android:inputType="text"
                    android:textColor="@color/t0"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="64dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分类"
                    android:textColor="@color/t0"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/sp_book_kind"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/kind"
                    android:prompt="@string/choosekind" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="64dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="学校"
                    android:textColor="@color/t0"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/sp_book_school"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/school"
                    android:prompt="@string/choosekind" />
            </TableRow>

        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/w"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:text="请选择此书的正面照"
                android:textColor="@color/t1" />

            <ImageView
                android:id="@+id/im_declare"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:background="@drawable/icon_add"
                android:onClick="declarePic" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/w"
            android:padding="8dp"
            android:text="请选择一种交易方式并完善相关信息（买卖填价格￥，租借填半年价格￥，互换填互换书籍）"
            android:textColor="@color/t1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/w"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp">

            <Spinner
                android:id="@+id/sp_book_way"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:entries="@array/way" />

            <EditText
                android:id="@+id/ed_deal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:drawable/editbox_background_normal"
                android:inputType="text" />
        </LinearLayout>

        <Button
            android:id="@+id/bt_declare"
            android:layout_width="160dp"
            android:layout_height="56dp"
            android:layout_gravity="right"
            android:layout_margin="8dp"
            android:background="@drawable/bt_black_d"
            android:text="发布"
            android:textColor="@color/w"
            android:textSize="16sp" />
    </LinearLayout>
</ScrollView>

