<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.shuwoapp.love.LoveFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_give_d"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/bt_black_d"
                android:text="@string/donate_donate_declare"
                android:textColor="@color/w"
                android:textSize="16sp" />

            <Button
                android:id="@+id/bt_need_d"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/bt_black_d"
                android:text="@string/donate_need_declare"
                android:textColor="@color/w"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l_give"
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bt_white_d"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="24dp"
                android:layout_weight="1"
                android:background="@drawable/love"
                android:contentDescription="@string/app_name" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/donate_donate"
                    android:textColor="@color/t0"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="献出一本书，传承一份爱"
                    android:textColor="@color/t1"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/l_need"
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bt_white_d"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="24dp"
                android:layout_weight="1"
                android:background="@drawable/book"
                android:contentDescription="@string/app_name" />


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:dividerPadding="5dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/donate_need"
                    android:textColor="@color/t0"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="你若有需，我愿相助"
                    android:textColor="@color/t1"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/l_charity"
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bt_white_d"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="24dp"
                android:layout_weight="1"
                android:background="@drawable/piao"
                android:contentDescription="@string/app_name" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:dividerPadding="5dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/main_charity"
                    android:textColor="@color/t0"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="公益就在身边，赶快行动把"
                    android:textColor="@color/t1"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/l_rank"
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bt_white_d"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="24dp"
                android:layout_weight="1"
                android:background="@drawable/happy"
                android:contentDescription="@string/app_name" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/main_rank"
                    android:textColor="@color/t0"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="积分可以看出你的人品哦~"
                    android:textColor="@color/t1"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>


