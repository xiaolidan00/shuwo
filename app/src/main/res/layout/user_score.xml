<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/g"
    android:orientation="vertical"
    tools:context="com.shuwoapp.user.UserScore">

    <FrameLayout
        android:id="@+id/f_sign"
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:background="@color/w"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/im_sign"
            android:layout_width="56dp"
            android:layout_height="48dp"
            android:layout_marginLeft="16dp" />

        <TextView
            android:id="@+id/tv_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:textColor="@color/t0"
            android:textSize="16sp" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@color/w"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="@string/user_tip_days"
            android:textColor="@color/t0"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_sign_day"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textColor="@color/t0"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@color/w"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="积分："
            android:textColor="@color/t0"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_sign_score"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textColor="@color/t0"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@color/w"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="排名："
            android:textColor="@color/t0"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_score_rank"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textColor="@color/t0"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>
